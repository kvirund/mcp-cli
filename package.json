{
  "name": "@kvirund/mcp-cli-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "MCP CLI monorepo - Universal CLI framework with plugin system",
  "author": "kvirund",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kvirund/mcp-cli.git"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "vitest": "^4.0.15"
  }
}
